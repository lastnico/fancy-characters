{
  "name": "Fancy Characters",
  "version": "0.8.2",
  "description": "Copy/Paste list of Fancy Characters. Convert words to Leet Speak, Morse, Braille, flipped text...",
  "browser_action": {
    "default_icon": "icon.png",
	"popup": "popup.html"
  },
  "icons": { 
  		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png" 
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [ "js/jquery-1.6.4.min.js", "js/jquery-ui-1.8.16.highlight.min.js", "page.js" ],
      "all_frames" : true
    }
  ],
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}